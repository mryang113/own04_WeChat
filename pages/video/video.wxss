
/* 头部 */
.videoContainer .header{
  display: flex;
  padding: 10rpx;
}
.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}
.header .search{
  border: 1px solid #ccc;
  border-radius: 8rpx;
  flex: 1; /* 就是三个子元素挨着的,中间权重为1份,其他两边为各自固定宽度,这样快速展开 */
  margin: 0 20rpx;
}
.header .search  input {
  width: 100%;
  height: 100%;
}
.header .search  input .placeholder{
  font-size: 28rpx;
  text-align: center;
  color: #d43c33;
}

/* 导航 */
.videoNav{
  display: flex;
  white-space: nowrap; /*flex布局，涉及到文字，需要white-space: nowrap*/
  margin: 20rpx 0;
  height: 62rpx;
}
.videoNav .navItem{
  padding: 0 30rpx;
}
.videoNav .navItem .navItemContent{
  height: 60rpx;
  font-size: 30rpx;
}
.videoNav .navItem .navItemContent.active{
  border-bottom: 1rpx solid #d43c33;
}

/* videoList视频列表*/
.videoItem{
  padding: 0 3%;
}
.videoItem video{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}