
/* 头部轮播 */
.indexContainer .navSwiper {
  width:100%;
  height: 300rpx;
}
.indexContainer .navSwiper image {
  width: 100%;
  height: 100%;
  
}

/* 导航区域 */
.navContainer{
  display: flex;

}
.navContainer .navItem{
  width: 20%; 
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navItem text {
  font-size: 26rpx;
}

.navContainer .iconfont{
  width: 100rpx;
  height: 100rpx;
  background: rgb(240,19,19);
  border-radius: 50%;
  font-size: 50rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  margin: 20rpx 0;
}

/* 推荐歌曲 */
.recommendContainer{
  padding: 40rpx 20rpx;
}


/* 滑屏 */
.navScroll{
  display: flex;
  height: 300rpx;
}
.navScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.navScroll .scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.navScroll .scrollItem text{
  /* display: block;  感觉不要也可以 */
  font-size: 26rpx;
  overflow: hidden;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
}

/* 排行榜 内容区 topList */
.topList{
  padding: 40rpx 20rpx;
}
.topListSwiper{
  height: 460rpx;
}
.swiperContent{
  width: 96%;
  background: #fbfbfb;
  background: pink;
}
.swiperContent .title{
  font-size: 28rpx;
  line-height: 80rpx;
}
.musicContent{
  /* 当一个元素使用display：flex以后其下边的子元素会自动变成block */
  display: flex;
  margin-top: 20rpx;
}
.musicContent .musicImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.musicContent text{
  height: 100rpx;
  line-height: 100rpx;
}
.musicContent .count{
  width: 100rpx;
  text-align: center;
}
